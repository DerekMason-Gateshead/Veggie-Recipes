@model List<Recipe>

<h1>@ViewData["Message"]</h1>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Recipe
            </th>
            <th>
                Web Link
            </th>
            <th>
                Ingredients
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a target="_blank" href=@item.thumbnail>
                        <img src=@item.thumbnail style="width:150px">
                    </a>
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <a href=@item.Href>Link</a>
                </td>
                <td>
                    @item.ingredients
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>
